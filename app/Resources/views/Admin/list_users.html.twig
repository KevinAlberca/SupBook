{% extends "::admin.html.twig" %}
{% block title %}Liste des utilisateurs{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" />
{% endblock %}



{% block body %}
    <h2 class="center">Liste des utilisateurs</h2>
    <a class="waves-effect waves-light btn modal-trigger" href="#create_user">Create user</a>
    <table>
        <thead>
            <tr>
                <th>id</th>
                <th>lastname</th>
                <th>firstname</th>
                <th>email</th>
                <th>promotion_year</th>
                <th>id_bachelor</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.promotionYear }}</td>
                <td>{{ user.idBachelor }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div id="create_user" class="modal modal-fixed-footer">
        <div class="modal-content">
            {{ include("Admin/add_user.html.twig", { "form": user_form}) }}
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Quit</a>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('table').DataTable();
            $('.modal-trigger').leanModal();
        });
    </script>
{% endblock %}