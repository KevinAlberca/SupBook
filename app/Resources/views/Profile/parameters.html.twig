{% extends "::base.html.twig" %}

{% block title %}Parametres du Compte{% endblock %}

{% block body %}
    <h1 class="center">Parameters</h1>
    {{ user.id }}
    {{ user.lastname|upper }}
    {{ user.firstname|capitalize }}
    {{ user.promotionYear }}
    {{ user.email }}

    <div class="row">
        <div class="col s12 m6">
            {{ include("Profile/change_email.html.twig", {"form": email_form}) }}
        </div>
        <div class="col s12 m6">
            {{ include("Profile/change_password.html.twig", {"form": password_form}) }}
        </div>
    </div>
{% endblock %}
